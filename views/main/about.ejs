    <style>
        #about {
            padding: 50px 20px;
            background-color: #fff;
        }

        #about h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 36px;
            color: #333;
        }

        .about-content {
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }

        .about-content h2 {
            font-size: 28px;
            margin-bottom: 10px;
            color: #333;
        }

        .about-content p {
            font-size: 16px;
            line-height: 1.6;
            margin: 10px 0;
        }

        .about-content img {
            max-width: 100%;
            border-radius: 8px;
            margin-top: 20px;
        }

        .about-content ol {
            margin: 20px 0;
            padding-left: 20px;
        }

        .about-content ol li {
            font-size: 16px;
            margin: 10px 0;
        }
