<%- include('../common/header') %>
<style>
    body {
font-family: Arial, sans-serif;
background-color: #f9f9f9;
margin: 0;
padding: 0;
}

.review-form-container {
max-width: 600px;
margin: 50px auto;
padding: 20px;
background-color: #fff;
box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
text-align: center;
}

.form-group {
margin-bottom: 15px;
}

label {
display: block;
margin-bottom: 5px;
}

input[type="text"],
input[type="file"],
textarea {
width: 100%;
padding: 10px;
margin-bottom: 10px;
border: 1px solid #ccc;
border-radius: 4px;
}

textarea {
height: 100px;
resize: none;
}

button {
display: block;
width: 100%;
padding: 10px;
background: #007BFF;

color: white;
border: none;
border-radius: 4px;
cursor: pointer;
font-size: 16px;
}

button:hover {
background: #0056b3;

}

#successMessage {
text-align: center;
color: #28a745;
}

</style>
<div class="review-form-container">
    <h2>Submit Your Review</h2>
    <form id="reviewForm" action="/review/createReview" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="reviewerName">Your Name:</label>
            <input type="text" id="reviewerName" name="reviewerName" required>
        </div>
        <div class="form-group">
            <label for="campName">Camp/Organization/Travel Agency Name:</label>
            <input type="text" id="campName" name="campName" required>
        </div>

        <div class="form-group">
            <label for="campName">PlaceName:</label>
            <input type="text" id="placeName" name="placeName" required>
        </div>
        <div class="form-group">
            <label for="reviewImage">Upload Your Image:</label>
            <input type="file" id="reviewImage" name="reviewImage" accept="image/*" required>
        </div>
        <div class="form-group">
            <label for="reviewText">Your Review:</label>
            <textarea id="reviewText" name="reviewText" maxlength="300" required></textarea>
        </div>
        <button type="submit" >Submit Review</button>
    </form>
    <div id="successMessage" style="display: none;">
        <h3>Thank you for your review!</h3>
    </div>
</div>

<%- include('../common/footer') %>
